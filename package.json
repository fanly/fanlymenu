{
  "private": true,
  "main": "dist/source/main/index.js",
  "watch": {
    "run:electron": {
      "patterns": [
        "dist/source/main",
        "dist/source/preload"
      ],
      "extensions": [
        "js"
      ]
    },
    "build:main": {
      "patterns": [
        "src/main"
      ],
      "extensions": [
        "ts"
      ]
    },
    "build:preload": {
      "patterns": [
        "src/preload"
      ],
      "extensions": [
        "ts",
        "json"
      ]
    }
  },
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "vite build --config ./config/main.vite.js",
    "build:preload": "vite build --config ./config/preload.vite.js",
    "build:renderer": "vite build --config ./config/renderer.vite.js",
    "watch": "npm-watch",
    "watch:build:main": "npm-watch build:main",
    "watch:run:preload": "npm-watch build:preload",
    "watch:build:renderer": "vite serve --config ./config/renderer.vite.js",
    "watch:run:electron": "npm-watch run:electron",
    "run:electron": "electron .",
    "electron-builder": "electron-builder build --config ./config/electron-builder.js",
    "typecheck": "typecheck",
    "lint": "eslint src/**/*.{ts,vue} {tasks,config}/**/*.js"
  },
  "devDependencies": {
    "builtin-modules": "^3.1.0",
    "electron": "^11.0.2",
    "electron-builder": "^22.9.1",
    "npm-watch": "^0.7.0",
    "typescript": "^4.1.2",
    "vite": "^1.0.0-rc.9"
  },
  "dependencies": {
    "electron-updater": "^4.3.5"
  }
}

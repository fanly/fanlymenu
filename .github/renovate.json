{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":automergeTypes"
  ],
  "labels": [
    "dependencies"
  ],
  "baseBranches": [
    "main"
  ],
  "bumpVersion": "patch",
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ],
      "semanticCommitType": "build"
    },
    {
      "depTypeList": [
        "dependencies"
      ],
      "semanticCommitType": "fix"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "updateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "sourceUrlPrefixes": [
        "https://github.com/vitejs/vite/"
      ],
      "groupName": "Vite monorepo packages"
    },
    {
      "packageNames": [
        "electron",
        "electron-releases"
      ],
      "groupName": "Electron"
    },
    {
      "packageNames": [
        "electron-releases"
      ],
      "automerge": true,
      "requiredStatusChecks": null,
      "commitBody": "[skip ci]"
    },
    {
      "packageNames": [
        "electron"
      ],
      "stabilityDays": 14
    }
  ],
  "prHourlyLimit": 10,
  "rangeStrategy": "bump"
}
